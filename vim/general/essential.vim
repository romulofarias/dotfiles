set nocompatible
filetype plugin on
set rnu
set nu
syntax on
set showcmd
set showmode
set laststatus=2
set incsearch
set hlsearch
set ruler
set backspace=indent,eol,start          "backspace atua sobre indentação, quebra de linha e início de linha
set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4
set background=dark
set scrolloff=8
colorscheme desert
set statusline=%F%m%r%h%w%=(%{&ff}/%Y)\ (line\ %l/%L,\ col\ %c)\ %P
